{
	"name": "pulsar-connection",
	"type": "flogo:connection",
	"version": "1.1.2",
	"title": "Apache Pulsar Connection",
	"description": "A simple pulsar connection",
	"author": "TIBCO Software Inc.",
	"settings": [
		{
			"name": "name",
			"type": "string",
			"required": true
		},
		{
			"name": "description",
			"type": "string",
			"required": false
		},
		{
			"name": "url",
			"type": "string",
			"required": true
		},
		{
			"name": "auth",
			"type": "string",
			"required": true,
			"value": "None",
			"allowed": ["None","TLS","JWT","Athenz","OAuth2"]
		},
		{
			"name": "allowInsecure",
			"type": "boolean",
			"required": true,
			"value": false
		},
		{
			"name": "caCert",
			"type": "string",
			"required": false,
			"value": ""
		},
		{
			"name": "certFile",
			"type": "string"
		},
		{
			"name": "keyFile",
			"type": "string"
		},
		{
			"name": "athenzAuth",
			"type": "params"
		},
		{
			"name": "jwt",
			"type": "string",
			"required": false,
			"value": ""
		},
		{
			"name": "privateKey",
			"type": "string",
			"required": true,
			"value": ""
		},
		{
			"name": "issuerUrl",
			"type": "string",
			"required": false,
			"value": ""
		},
		{
			"name": "audience",
			"type": "string",
			"required": false,
			"value": ""
		},
		{
			"name": "scope",
			"type": "string",
			"required": false,
			"value": ""
		},
		{
			"name": "connTimeout",
			"type": "integer",
			"required": false,			
			"description": "Connection Timeout in Seconds. Timeout for the establishment of a TCP connection",
			"value": 5
		},
		{
			"name": "opTimeout",
			"type": "integer",
			"required": false,			
			"description": "Operation Timeout in Seconds. Operations like Producer-create, Subscribe will be retried until this interval",
			"value": 30
		}
	]
}
