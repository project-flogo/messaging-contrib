{
	"name": "pulsar-activity",
	"type": "flogo:activity",
	"version": "1.0.1",
	"title": "Apache Pulsar Producer Activity",
	"author": "TIBCO Software Inc.",
	"description": "A Simple activity to produce messages on apache pulsar",
	"settings": [
		{
			"name": "connection",
			"type": "connection",
			"required": true
		},
		{
			"name": "topic",
			"type": "string",
			"required":true
		},
		{
			"name": "compressionType",
			"required": true,
			"type": "string",
			"allowed": ["NONE","LZ4","ZLIB","ZSTD"],
			"value": "NONE"
		},
		{
			"name": "batching",
			"type": "boolean",
			"required":true,
			"value": false
		},
		{
			"name": "chunking",
			"type": "boolean",
			"required":true,
			"value": false
		},
		{
			"name": "chunkMaxMessageSize",
			"type": "integer",
			"required":false
		}
	],
	"input": [
		{
			"name": "payload",
			"type": "any"
		},
		{
			"name": "properties",
			"type": "object"
		},
		{
			"name": "key",
			"type": "string"
		}

	],
	"output": [
		{
			"name": "msgid",
			"type": "string"
		}
	]
}
